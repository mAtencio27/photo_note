<% content_for :title do %>
  Notes &ndash; <%= DateTime.now %>
<% end %>

<div class="columns mt-6 is-centered"></div>
    <% @entries.each do |entry| %>
      <div class="column is-one-quarter">
        <div class="card">
          <header class="card-header">
            <p class="card-header-title"><%=entry.title%></p>
          </header>
          <div class="card-content">
            <div class ="content">
              <p><span class="has-text-weight-bold"><%= entry.film_type %></span></p>
              <p><span class="has-text-weight-bold"><%= entry.name %></span></p>
              <p><span class="has-text-weight-bold"><%= entry.iso %></span></p>
              <p><span class="has-text-weight-bold"><%= entry.location %></span></p>
              <p><span class="has-text-weight-bold"><%= entry.notes %></span></p>
              <p class="italic">Logged <%= time_ago_in_words(entry.created_at)%> ago</p>
            </div>
          </div>
          <div class="card-footer">
            <%= link_to 'Show', entry, class: "card-footer-item" %>
            <%= link_to 'Edit', edit_entry_path(entry), class: "card-footer-item" %>
            <%= link_to 'Destroy', entry, method: :delete, data: { confirm: 'Are you sure?' }, class: "card-footer-item" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>

<br>

<%= link_to 'New Entry', new_entry_path %>
