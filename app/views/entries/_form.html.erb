<%= form_with(model: entry) do |form| %>
  <% if entry.errors.any? %>

    <div class="message is-danger">
      <div class="message-header">
        <p><%= pluralize(entry.errors.count, "error") %> prohibited this entry from being saved:</p>
      </div>
      <div class="message-body">
        <ul>
          <% entry.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :title, class: "label" %>
    <%= form.text_field :title, class: "input" %>
  </div>

  <div class="field">
    <%= form.label :film_type, class: "label" %>
    <%= form.text_field :film_type, class: "input" %>
  </div>

  <div class="field">
    <%= form.label :name, class: "label" %>
    <%= form.text_field :name, class: "input" %>
  </div>

  <div class="field">
    <%= form.label :iso, class: "label" %>
    <%= form.number_field :iso, class: "input" %>
  </div>

  <div class="field">
    <%= form.label :location, class: "label" %>
    <%= form.text_field :location, class: "input" %>
  </div>

  <div class="field">
    <%= form.label :notes, class: "label" %>
    <%= form.text_field :notes, class: "input" %>
  </div>

  <!-- invisable user ID-->
  <div class="field">
    <%= form.number_field :user_id, id: :entry_user_id, class: "input",
        value: current_user.id, type: :hidden %>
  </div>
  <!----------------------->

  <div class="actions">
    <%= form.submit class: "button is-danger" %>
  </div>
<% end %>
